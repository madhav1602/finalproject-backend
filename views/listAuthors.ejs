<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Authors</title>
    <!-- Add this style tag in the <head> section of your EJS files -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 20px;
    }

    h1, h2 {
        color: #333;
    }

    nav {
        background-color: #eee;
        padding: 10px;
        margin-bottom: 20px;
    }

    nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    nav ul li {
        display: inline;
        margin-right: 10px;
    }

    nav a {
        text-decoration: none;
        color: #333;
        font-weight: bold;
    }

    hr {
        border: 1px solid #ddd;
        margin: 20px 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    form {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input, textarea, select {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
    }

    a {
        text-decoration: none;
        color: #1E90FF;
        margin-right: 10px;
    }

    footer {
        margin-top: 20px;
        text-align: center;
        color: #777;
    }
</style>

</head>
<body>
    <h1>List of Authors</h1>
    <table border="1">
        <tr>
            <th>Author ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Date of Registration</th>
            <th>Phone Number</th>
            <th>Gender</th>
            <th>Photo URL</th>
            <th>Action</th>
        </tr>
        <% authors.forEach(author => { %>
            <tr>
                <td><%= author.aid %></td>
                <td><%= author.aname %></td>
                <td><%= author.email %></td>
                <td><%= author.dob ? author.dob.toLocaleDateString() : '' %></td>
                <td><%= author.dor ? author.dor.toLocaleDateString() : '' %></td>
                <td><%= author.phonenumber %></td>
                <td><%= author.gender %></td>
                <td><%= author.photourl %></td>
                <td>
                    <a href="/editAuthor/<%= author.aid %>">Edit</a>
                    <a href="/deleteAuthor/<%= author.aid %>" onclick="return confirm('Are you sure you want to delete this author?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>
    <br>
    <a href="/addAuthor">Add New Author</a>
</body>
</html>
